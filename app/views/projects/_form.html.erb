<%= form_with(model: project, local: true, class: "form") do |f| %>
  <% if project.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h3>
      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Project Name" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter project name", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description (Optional)" %>
    <%= f.text_area :description, class: "form-control", placeholder: "Enter project description", rows: 5 %>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", project.persisted? ? project_path(project) : projects_path, class: "btn btn-link" %>
  </div>
<% end %>
