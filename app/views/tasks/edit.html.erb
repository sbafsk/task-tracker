<!-- Form Container -->
<div class="max-w-2xl">
  <div class="bg-white rounded-lg shadow-card p-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-secondary-900 font-sans">Edit Task</h1>
      <p class="mt-1 text-sm text-secondary-600">Update task: <%= @task.title %></p>
    </div>
    <%= render "form", project: @project, task: @task %>
  </div>
</div>
